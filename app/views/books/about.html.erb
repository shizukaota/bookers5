<%= render 'list', user: @user, book: @book %>


<body>
   <div class="body">



               <div class="col-xs-9">
               <h2> Books</h2>
               <table class="table">
                 <thead>
                   <tr>
                     <th></th>
                     <th>title</th>
                     <th>opinion</th>
                     <th colspan="3"></th>
                   </tr>
                 </thead>
                   <% @books.each do |book| %>
                   <tbody>
                       <tr>
                           <td></td>
                           <td><%= attachment_image_tag book.user, :image, :fill, 100, 100, format: 'jpeg',fallback: "images.jpg" %></td>
                           <td><%= link_to book.title, "/books/#{book.id}",class: "book_#{book.id}" %></td>
                           <td><%= book.body %></td>
                       </tr>
                   <% end %>
                 </tbody>
               </table>
           </div>
   </div>
</body>